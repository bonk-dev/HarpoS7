<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Title>HarpoS7</Title>
        <Description>HarpoS7 is a C# library designed to authenticate sessions in the S7 Comm Plus protocol. </Description>
        <PackageProjectUrl>https://github.com/bonk-dev/HarpoS7</PackageProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageIcon>nuget-icon.png</PackageIcon>
        <PackageVersion>1.1.0-pre3</PackageVersion>
        <RepositoryUrl>https://github.com/bonk-dev/HarpoS7</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>siemens</PackageTags>
        <AssemblyVersion>1.1.0</AssemblyVersion>
        <FileVersion>1.1.0</FileVersion>
        <Version>1.1.0</Version>
        <PackageReleaseNotes>1.1.0 - S7-1500 support
1.0.1 - basic legitimation (password auth) support</PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="CommunityToolkit.HighPerformance" Version="8.2.2" />
    </ItemGroup>

    <ItemGroup>
      <None Include="..\tools\nuget-icon.png">
        <Pack>True</Pack>
        <PackagePath></PackagePath>
        <Link>nuget-icon.png</Link>
      </None>
    </ItemGroup>
    
    <ItemGroup>
        <None Include="..\README.md" Pack="true" PackagePath=""/>
    </ItemGroup>
    
    <ItemGroup>
      <ProjectReference Include="..\HarpoS7.Family0\HarpoS7.Family0.csproj" />
      <ProjectReference Include="..\HarpoS7.Utilities\HarpoS7.Utilities.csproj" />
    </ItemGroup>
    
</Project>
